<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.main.community.CommunityFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/community_title"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/community"
                android:textSize="30sp"
                android:fontFamily="@font/esamanru_medium"
                android:textColor="@color/black"
               app:layout_constraintTop_toTopOf="parent"
                />
            <View
                android:id="@+id/community_title_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                app:layout_constraintTop_toBottomOf="@+id/community_title"
                android:background="@color/black"/>

            <EditText
                android:id="@+id/et_search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/community_title_view"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:background="@drawable/rectangle_radius_10_width_1"
                android:text="키워드로 글을 검색해 보세요"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/et_search_bar"
                app:layout_constraintStart_toStartOf="parent"
                android:text="정책 토론"
                android:textColor="@color/black"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>